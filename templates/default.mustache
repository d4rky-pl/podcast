<!DOCTYPE html>
<html>
<head>
  <title>{{blog_title}}</title>
  {{{stylesheet_tag}}}
  {{{javascript_tag}}}
  {{{feed_tag}}}
</head>
<body>
  <div class="container container-static">
    <header class="card">
      <a href="/">
        <h1>
          Nerdblog<b>.pl</b>
          <span>( podcast )</span>
        </h1>
      </a>
    </header>

    {{#page.index}}
      {{#podcasts}}
        <a class="podcast card card-collapsed" href="{{url}}">
          <div class="card-header">
            <h1>{{title}}</h1>
          </div>
        </a>
      {{/podcasts}}
    {{/page.index}}

    {{#page.show}}
      <div class="podcast card card-primary">
        <div class="card-header">
          <h1>{{title}}</h1>
        </div>

        <div class="card-body">{{{description}}}</div>

        <div class="card-audio-player">
          <audio controls>
            {{#sources}}
              <source type="{{type}}" src="{{src}}">
            {{/sources}}
          </audio>
        </div>

        <div class="card-footer">
          <div class="row">
            <div class="col-sm-6">
              <small class="text-muted">{{published_at}}</small>
            </div>
            <div class="col-sm-6 text-right">
              {{#downloads}}
                <a class="btn btn-default btn-xs" href="{{url}}">
                  <i class="glyphicon glyphicon-download"></i>
                  {{format.upcase}}
                </a>
              {{/downloads}}
            </div>
          </div>
        </div>
      </div>

      <div class="card share">
        <span class='st_facebook_hcount' displayText='Facebook'></span>
        <span class='st_twitter_hcount' displayText='Tweet'></span>
        <span class='st_email_hcount' displayText='Email'></span>
      </div>

      <div class="card comments">
        <div id="disqus_thread"></div>
        <script type="text/javascript">
          var disqus_shortname = 'nerdblog-pl-podcast';
          (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
      </div>
    {{/page.show}}

    <footer class="copyright text-center">
      <span><a href="{{{feed_url}}}">RSS</a></span>
      <span><a href="http://twitter.com/nerdblog.pl">Twitter</a></span>
      <span><a href="http://nerdblog.pl">&copy; Nerdblog.pl</a></span>
    </footer>
  </div>
  <script type="text/javascript">
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-12883209-3', 'auto');
    ga('send', 'pageview');
  </script>
  <script type="text/javascript">var switchTo5x=true;</script>
  <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
  <script type="text/javascript">stLight.options({publisher: "14e328fb-f794-47a0-a912-18d16c5232e4", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>
</body>
</html>