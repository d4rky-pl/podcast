<div class="page-header">
  <%= link_to admin_podcasts_path, class: 'btn btn-default pull-right' do %>
    <i class="glyphicon glyphicon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_admin_podcast_path(@podcast), class: 'btn btn-primary pull-right' do %>
    <i class="glyphicon glyphicon-pencil"></i>
    Edit
  <% end %>
  <h1>Show Podcast</h1>
</div>

<dl class="dl-horizontal">
      <dt>Title:</dt>
    <dd><%= @podcast.title %></dd>
      <dt>Description:</dt>
    <dd><%= @podcast.description %></dd>
      <dt>Stream:</dt>
    <dd><%= @podcast.stream %></dd>
      <dt>Admin:</dt>
    <dd><%= @podcast.admin %></dd>
  </dl>